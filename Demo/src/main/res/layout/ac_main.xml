<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Previews"
        android:textColor="#AAA"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="WheelStraightPicker"
                android:textColor="#AAA"
                android:textSize="12sp" />

            <com.aigestudio.wheelpicker.view.WheelStraightPicker
                android:id="@+id/main_wheel_straight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/main_obtain_straight_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn"
                android:padding="5dp"
                android:text="Obtain"
                android:textColor="#999"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="WheelCurvedPicker"
                android:textColor="#AAA"
                android:textSize="12sp" />

            <com.aigestudio.wheelpicker.view.WheelCurvedPicker
                android:id="@+id/main_wheel_curved"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:padding="10dp"
                android:layout_weight="1"
                android:background="#FFFDD6"
                aigestudio:wheel_item_index="8"
                aigestudio:wheel_text_color="#A0A27A"
                aigestudio:wheel_text_color_current="#79744E" />

            <Button
                android:id="@+id/main_obtain_curved_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn"
                android:padding="5dp"
                android:text="Obtain"
                android:textColor="#999"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Widgets"
        android:textColor="#AAA"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/main_year_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn"
            android:padding="5dp"
            android:text="WheelYearPicker"
            android:textColor="#999"
            android:textSize="16sp" />

        <Button
            android:id="@+id/main_month_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_btn"
            android:padding="5dp"
            android:text="WheelMonthPicker"
            android:textColor="#999"
            android:textSize="16sp" />

        <Button
            android:id="@+id/main_day_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/main_month_btn"
            android:background="@drawable/bg_btn"
            android:padding="5dp"
            android:text="WheelDayPicker"
            android:textColor="#999"
            android:textSize="16sp" />

        <Button
            android:id="@+id/main_date_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/main_month_btn"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_btn"
            android:padding="5dp"
            android:text="WheelDatePicker"
            android:textColor="#999"
            android:textSize="16sp" />

        <Button
            android:id="@+id/main_hour_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/main_day_btn"
            android:background="@drawable/bg_btn"
            android:padding="5dp"
            android:text="WheelHourPicker"
            android:textColor="#999"
            android:textSize="16sp" />

        <Button
            android:id="@+id/main_minute_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/main_date_btn"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_btn"
            android:padding="5dp"
            android:text="WheelMinutePicker"
            android:textColor="#999"
            android:textSize="16sp" />

        <Button
            android:id="@+id/main_time_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/main_hour_btn"
            android:background="@drawable/bg_btn"
            android:padding="5dp"
            android:text="WheelTimePicker"
            android:textColor="#999"
            android:textSize="16sp" />

        <!--<Button-->
            <!--android:id="@+id/main_minute_btn"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_below="@id/main_minute_btn"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:background="@drawable/bg_btn"-->
            <!--android:padding="5dp"-->
            <!--android:text="WheelMinutePicker"-->
            <!--android:textColor="#999"-->
            <!--android:textSize="16sp" />-->
    </RelativeLayout>

    <Button
        android:id="@+id/to_self"
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:text="我的"
        android:textSize="20sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>